#!/usr/bin/env powscript


translate(key)
  local i18n_key=$UI_LANG.$key
  message="${DICT[$i18n_key]}"
  while isset "${2}"
    message=$(interpolate "${message}" "${2}")
    shift
  echo $message


interpolate(string, substitution)
  IFS="=" read name value <<< "${substitution}"
  string="${string//\{\{ ${name} \}\}/${value}}"
  echo "${string}"
